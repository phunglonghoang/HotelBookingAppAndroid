<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.ThemKhachSan">

    <TextView
        android:id="@+id/themKS"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Thêm khách sạn"/>

    <EditText
        android:id="@+id/editTextHotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/themKS"
        android:layout_marginBottom="20dp"
        android:hint="Hotel Name"/>

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/editTextHotelName"
        android:hint="Location"/>

    <EditText
        android:id="@+id/editTextStarRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLocation"
        android:layout_marginBottom="20dp"
        android:hint="Star Rating"/>

    <EditText
        android:id="@+id/editTextImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextStarRating"
        android:hint="Image URL"/>

    <ImageView
        android:id="@+id/imageViewHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/editTextImageUrl"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/buttonAddRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/imageViewHotel"
        android:text="Add Room Type"/>

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAddRoom"
        android:layout_marginBottom="20dp"
        android:text="Upload Image"/>

    <Button
        android:id="@+id/buttonSaveHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/buttonUploadImage"
        android:text="Save Hotel"/>

    <Button
        android:id="@+id/buttonBackAddKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/buttonSaveHotel"
        android:text="Back"/>
</RelativeLayout>
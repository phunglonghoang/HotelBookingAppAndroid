<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity.AddBookingAdmin">

    <Spinner
        android:id="@+id/roomIdSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Room"
        android:layout_marginTop="60dp"
        android:padding="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Spinner
        android:id="@+id/userIdSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:hint="Select User"
        android:layout_below="@id/roomIdSpinner"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/checkInEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check In Date (YYYY-MM-DD)"
        android:layout_below="@id/userIdSpinner"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/checkOutEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check Out Date (YYYY-MM-DD)"
        android:layout_below="@id/checkInEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/addBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Booking"
        android:layout_below="@id/checkOutEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/backBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_below="@id/addBookingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>
</RelativeLayout>